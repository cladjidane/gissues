{
  "manifest_version": 3,
  "name": "Gissues - Rapports de Bugs Visuels Simplifiés",
  "version": "1.1.0",
  "description": "Prenez des captures d'écran et créez des issues GitHub instantanément. Parfait pour les développeurs, équipes QA et bêta-testeurs.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.github.com/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle",
      "match_about_blank": true
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Gissues"
  },
  
  "options_page": "src/options/options.html",
  
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G"
      },
      "description": "Prendre une capture d'écran et signaler un bug"
    }
  }
}